---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import HeroSection from "../components/HeroSection.astro";
import ProjectsGrid from "../components/ProjectsGrid.jsx";
import ExperienceSection from "../components/ExperienceSection.astro";
import EducationSection from "../components/EducationSection.astro";

const title = "Jeronimo Mayorca | MayorcaDev - AI Developer & Full Stack";
const description =
  "Artificial Intelligence and Fullstack Developer, specializing in Python, TypeScript, and JavaScript, with a focus on technological solutions that drive business growth. I build robust web applications, scalable systems, and custom AI tools that optimize processes and deliver value for businesses of all sizes—from innovative startups to established corporations and AI industry leaders. My projects blend functional design with cutting-edge technology to tackle complex challenges and accelerate digital transformation. Ready to elevate your business with a game-changing solution? Contact MayorcaDev, and let’s shape the future of your company together.";
const keywords =
  "Jeronimo Mayorca, mayorcadev, mayorca dev, portfolio, desarrollador, full stack, inteligencia artificial, AI, Python, TypeScript, JavaScript, web, developer, Colombia, proyectos";

// Schema.org markup for Person
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Jeronimo Mayorca",
  url: "https://jeronimomayorca.vercel.app",
  jobTitle: "AI & Full Stack Developer",
  sameAs: [
    "https://github.com/jeronimomayorca",
    "https://linkedin.com/in/mayorcajeronimo",
    "https://twitter.com/JeronimoMayorca",
  ],
};
---

<Layout title={title} description={description} image="/og-image.png">
  <meta name="keywords" content={keywords} />
  <meta name="author" content="Jeronimo Mayorca" />
  <meta property="og:site_name" content="MayorcaDev" />
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

  <Navbar />

  <main>
    <HeroSection />

    <section id="projects" class="py-20" aria-labelledby="projects-heading">
      <h2
        id="projects-heading"
        class="text-3xl md:text-4xl font-bold text-center mb-12 font-sora"
      >
        Featured Projects
      </h2>
      <div class="flex justify-center">
        <div
          class="vento-grid-bg overflow-hidden p-2 md:p-6 lg:p-10 rounded-3xl w-full max-w-7xl box-border"
        >
          <ProjectsGrid client:only="react" />
        </div>
      </div>
    </section>

    <ExperienceSection />
    <EducationSection />
  </main>
</Layout>
