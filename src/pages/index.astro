---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import HeroSection from "../components/HeroSection.astro";
import ProjectsGrid from "../components/ProjectsGrid.jsx";
import ExperienceSection from "../components/ExperienceSection.astro";
import EducationSection from "../components/EducationSection.astro";

const title = "MayorcaDev | Jeronimo Mayorca - Full Stack & AI Developer";
const description =
  "MayorcaDev, el portafolio de Jeronimo Mayorca. Full Stack y AI Developer especializado en Python, TypeScript y JavaScript. Descubre proyectos, experiencia y recursos de inteligencia artificial y desarrollo web. Contacta a Mayorcadev para tus soluciones tecnológicas.";
const keywords =
  "mayorcadev, Jeronimo Mayorca, portafolio, desarrollador, full stack, inteligencia artificial, AI, Python, TypeScript, JavaScript, web, developer, Colombia, proyectos, portfolio, mayorca dev";

// Schema.org markup for Person
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Jeronimo Mayorca",
  url: "https://jeronimomayorca.vercel.app",
  jobTitle: "Full Stack & AI Developer",
  sameAs: [
    "https://github.com/jeronimomayorca",
    "https://linkedin.com/in/mayorcajeronimo",
    "https://twitter.com/JeronimoMayorca",
  ],
};
---

<Layout title={title} description={description} image="/og-image.png">
  <meta name="keywords" content={keywords} />
  <meta name="author" content="Jeronimo Mayorca" />
  <meta property="og:site_name" content="MayorcaDev" />
  <meta
    name="google-site-verification"
    content="TU_CODIGO_DE_VERIFICACION_SI_APLICA"
  />
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

  <Navbar />

  <main>
    <HeroSection />

    <section class="text-center my-8">
      <h2 class="text-2xl md:text-3xl font-bold text-accent font-sora">
        Bienvenido a Mayorcadev, el portafolio oficial de Jeronimo Mayorca
      </h2>
      <p class="text-lg text-gray-300 mt-2 font-domine">
        Aquí encontrarás todos los proyectos, experiencia y recursos de <b
          >MayorcaDev</b
        > (Jeronimo Mayorca), desarrollador full stack y especialista en inteligencia
        artificial. Si buscas a <b>mayorcadev</b> o <b>Jeronimo Mayorca</b> en Google,
        ¡este es el sitio correcto!
      </p>
    </section>

    <section id="projects" class="py-20" aria-labelledby="projects-heading">
      <h2
        id="projects-heading"
        class="text-3xl md:text-4xl font-bold text-center mb-12 font-sora"
      >
        Featured Projects
      </h2>
      <div class="flex justify-center">
        <div
          class="vento-grid-bg overflow-hidden p-2 md:p-6 lg:p-10 rounded-3xl w-full max-w-7xl box-border"
        >
          <ProjectsGrid client:only="react" />
        </div>
      </div>
    </section>

    <ExperienceSection />
    <EducationSection />
  </main>
</Layout>
