---
import MobileMenu from "../components/MobileMenu.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  description = "I'm Jerónimo Mayorca, a developer with expertise in Python and web technologies like TypeScript and JavaScript. I specialize in applied artificial intelligence — from innovative personal projects to custom AI integrations for businesses. Discover my high-impact tech solutions.",
  image = "/og-image.png",
  canonicalURL = new URL(Astro.url.pathname, Astro.site).toString(),
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Domine:wght@400;700&family=Sora:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-primary text-white min-h-screen universe-bg">
    <header class="fixed w-full bg-secondary/80 backdrop-blur-sm z-50">
      <MobileMenu />
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="bg-secondary mt-20 py-8">
      <div class="container mx-auto px-4 text-center">
        <p class="font-domine text-lg">
          &copy; {new Date().getFullYear()} Mayorcadev. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --accent: 0, 255, 127;
    --accent-light: 57, 255, 157;
    --accent-dark: 0, 200, 100;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    background: #0f172a;
    background-size: 224px;
  }

  .universe-bg {
    background: radial-gradient(
        ellipse at 60% 10%,
        rgba(59, 130, 246, 0.1) 0%,
        transparent 70%
      ),
      radial-gradient(
        ellipse at 20% 80%,
        rgba(96, 165, 250, 0.1) 0%,
        transparent 70%
      ),
      linear-gradient(120deg, #0f172a 0%, #1e293b 100%);
    position: relative;
    overflow-x: hidden;
  }
  .universe-bg::before {
    content: "";
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    background-image: repeating-radial-gradient(
        circle at 10% 20%,
        rgba(255, 255, 255, 0.08) 0 1px,
        transparent 1px 100px
      ),
      repeating-radial-gradient(
        circle at 80% 70%,
        rgba(255, 255, 255, 0.06) 0 1px,
        transparent 1px 120px
      ),
      repeating-radial-gradient(
        circle at 50% 50%,
        rgba(255, 255, 255, 0.1) 0 1.2px,
        transparent 1.2px 160px
      );
    background-size: cover;
    opacity: 0.7;
  }

  .shadow-glow-sm {
    box-shadow:
      0 0 5px rgba(var(--accent), 0.5),
      0 0 10px rgba(var(--accent), 0.3);
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
