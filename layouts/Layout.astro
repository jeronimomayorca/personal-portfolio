---
import MobileMenu from "../components/MobileMenu.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Personal portfolio showcasing my work and skills",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-primary text-white min-h-screen universe-bg">
    <header class="fixed w-full bg-secondary/80 backdrop-blur-sm z-50"></header>

    <MobileMenu />

    <main class="pt-20">
      <slot />
    </main>

    <footer class="bg-secondary mt-20 py-8">
      <div class="container mx-auto px-4 text-center">
        <p>
          &copy; {new Date().getFullYear()} Mayorcadev. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --accent: 59, 130, 246;
    --accent-light: 96, 165, 250;
    --accent-dark: 37, 99, 235;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    background: #0f172a;
    background-size: 224px;
  }

  .universe-bg {
    background: radial-gradient(
        ellipse at 60% 10%,
        rgba(59, 130, 246, 0.1) 0%,
        transparent 70%
      ),
      radial-gradient(
        ellipse at 20% 80%,
        rgba(96, 165, 250, 0.1) 0%,
        transparent 70%
      ),
      linear-gradient(120deg, #0f172a 0%, #1e293b 100%);
    position: relative;
    overflow-x: hidden;
  }
  .universe-bg::before {
    content: "";
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
    background-image: repeating-radial-gradient(
        circle at 10% 20%,
        rgba(255, 255, 255, 0.08) 0 1px,
        transparent 1px 100px
      ),
      repeating-radial-gradient(
        circle at 80% 70%,
        rgba(255, 255, 255, 0.06) 0 1px,
        transparent 1px 120px
      ),
      repeating-radial-gradient(
        circle at 50% 50%,
        rgba(255, 255, 255, 0.1) 0 1.2px,
        transparent 1.2px 160px
      );
    background-size: cover;
    opacity: 0.7;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
